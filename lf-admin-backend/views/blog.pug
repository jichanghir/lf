extends ./components/layout

block variables
    - var authParallax = true;

block page-title
    | #{title}

block page

    include ./components/top-section
    +topSection('blog')

    section.blog-content.blog
        .blog-content__left
            aside.blog__article-titles
                ul.blog__article-list
                    each article in articles
                        li.blog__article-title
                            a(href=`#${article.title}`).blog__article-link= article.title




        .blog-content__right
            each article in articles
                a(name=`${article.title}`)
                .blog__article
                    .blog__title= article.title
                    .blog__date= article.date
                    .blog__text.simple-text= article.body

    include ./components/footer


